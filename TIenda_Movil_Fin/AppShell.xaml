<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TIenda_Movil_Fin.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TIenda_Movil_Fin"
    Shell.FlyoutBehavior="Disabled"
    Title="TIenda_Movil_Fin">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        Route="LoginPage" />
    <FlyoutItem Route="HomePage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:HomePage}"/>
        <ShellContent Title="Contact" ContentTemplate="{DataTemplate local:ContactPage}"/>
        <ShellContent Title="About" ContentTemplate="{DataTemplate local:AboutPage}"/>
    </FlyoutItem>
</Shell>

